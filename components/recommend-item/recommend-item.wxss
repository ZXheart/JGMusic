.recommend-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.recommend-item .pic {
  margin-right: 20rpx;
  width: 90rpx;
  border-radius: 10rpx;
}

.recommend-item .content {
  flex-grow: 1;
}

.recommend-item .content .music-name {
  margin-bottom: 6rpx;
  font-size: 30rpx;
}

.recommend-item .content .artist-name {
  font-size: 20rpx;
  color: #666;
}